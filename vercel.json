


{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/dist/index.html" },
    { "src": "/(.*\\..*)", "dest": "/dist/$1" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}