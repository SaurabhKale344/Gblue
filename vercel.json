{
  "version": 2,
  "outputDirectory": "public",  
  "rewrites": [
    {
      "source": "/dist/(.*)",  
      "destination": "/dist/$1"
    },
    {
      "source": "/",           
      "destination": "/dist/index.html"
    },
    {
      "source": "/api/(.*)",   
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",     
      "destination": "/$1.html" 
    },
    {
      "source": "/(.*)",       
      "destination": "/server.js"
    }
  ]
}