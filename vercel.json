{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npx parcel build public/index.html --dist-dir dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/global.css",
      "dest": "/public/global.css"
    },
    {
      "src": "/style.css",
      "dest": "/public/style.css"
    },
    {
      "src": "/utils.js",
      "dest": "/public/utils.js"
    },
    {
      "src": "/script.js",
      "dest": "/public/script.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*\\.(?:png|jpg|jpeg|gif|svg|webp|ico))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}